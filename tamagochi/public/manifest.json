{
  "manifest_version": 2,
  "name": "Your Extension",
  "version": "1.0",
  "description": "Your extension description",
  "browser_action": {
    "default_icon": "logo192.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
